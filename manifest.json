{
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "js": ["jquery.min.js", "contentscript.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "description": "Use right click to rotate images on Chrome.",
    "icons": {
        "128": "rotate-128.png",
        "16": "rotate-16.png",
        "48": "rotate-48.png"
    },
    "name": "Rotate Image",
    "permissions": ["contextMenus", "tabs", "http://*/*", "https://*/*"],
    "version": "1.0",
    "manifest_version": 2
}
